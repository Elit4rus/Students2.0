<Page x:Class="StudentsVer2._0.View.Pages.Menu.StudentDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentsVer2._0.View.Pages.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="StudentDetailPage">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Фамилия:" FontWeight="Bold"/>
            <TextBlock x:Name="SurnameTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:" FontWeight="Bold"/>
            <TextBlock x:Name="NameTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество:" FontWeight="Bold"/>
            <TextBlock x:Name="PatronymicTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Группа:" FontWeight="Bold"/>
            <TextBlock x:Name="GroupTbl" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
